{
  "references": [],
  "compilerOptions": {
    "sourceMap": true,
    "removeComments": true,

    "lib": ["es6", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,

    "noUnusedLocals": true,

    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,

    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "outDir": "dist", 
    "baseUrl": "./"
  },
  "exclude": ["/node_modules/"],
  "include": ["src/**/*"]
}
